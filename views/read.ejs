<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Document</title>
</head>
<body class="bg-zinc-900 ">
    <div id="box" class=" p-10 text-white">
        <a href="/" class="text-blue-400 ">< Back</a>
        <h1 class="text-3xl mt-5 mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-5">
            <% if(users.length > 0) { %>
            <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="h-52 w-full bg-blue-500 overflow-hidden">
                    <img class="w-full h-full object-top object-cover" src="<%= user.image %>" alt="">
                </div>
                <h3 class="text-xl mt-3"><%= user.name %></h3>
                <h5 class="mt-1 text-zinc-400"><%= user.email %></h5>
                <div class="flex gap-3 mt-5">
                    <a class="text-blue-500" href="/edit/<%= user._id %>">Edit</a>
                    <a class="text-red-500" href="/delete/<%= user._id%>">Delete</a>
                </div>
            </div>
            <% }) %>
            <%} else {%>
                <h3 class="text-zinc-400" >No Users Found!</h3>
            <% } %>
        </div>
        
    </div>
    <script src="https://cdn.tailwindcss.com"></script>
</body>
</html>